.create-or-alter function with (skipvalidation = "true") TimepointFutureConsumption(Capacity:string, Timepoint:datetime) {
     let _selectedTimeWindow = Timepoint;
     let _endOfSelectedTimeWindow = _selectedTimeWindow + 1d;
     let _summaryInfoOnSelectedTimeWindow =
        CapacitySummary
        | where capacityId == Capacity or capacityName == Capacity
        | where windowEndTime == _selectedTimeWindow 
        | project
            windowStartTime=windowStartTime,
            windowEndTime,
            capacityId,
            capacitySku,
            baseCapacityUnits,
            timepointCapacityUnits,
            capacityUnitMs,
            overageTotalCuMs,
            overageBurndownCuMs,
            overageAddCuMs,
            interactiveDelayThresholdPercentage,
            interactiveRejectionThresholdPercentage,
            backgroundRejectionThresholdPercentage;
     let _summarisedOperationsWithinWindow =
        CapacityOperations
        | where windowStartTime <= _selectedTimeWindow and windowEndTime > _selectedTimeWindow
        | where capacityId == Capacity or capacityName == Capacity
        | where isempty(workloadAutoscaleCapacityUnitsLimit) or workloadAutoscaleCapacityUnitsLimit == 0
        | where releaseType == "Public"
        | summarize TotalCU = sum(capacityUnitMs)
            by
            windowStartTime,
            windowEndTime,
            capacityId,
            utilizationType,
            capacityName,
            releaseType
        | extend 
            countOf30SecondWindowsInRange = (windowEndTime - windowStartTime) / 30s,
            windowsToSmoothOver = range(windowStartTime, windowEndTime - 30s, 30s)
        | extend CUPerWindow = TotalCU / countOf30SecondWindowsInRange
        | project
            capacityId,
            utilizationType,
            windowsToSmoothOver,
            CUPerWindow,
            capacityName,
            releaseType
        | mv-expand windowsToSmoothOver
        | extend WindowStartTime = todatetime(windowsToSmoothOver)
        | where WindowStartTime between (_selectedTimeWindow .. _endOfSelectedTimeWindow)
        | summarize
            totalCuSec=sum(CUPerWindow) / 1000,
            totalBackgroundCuSec = sumif(CUPerWindow, utilizationType == "Background" and releaseType == "Public") / 1000,
            totalInteractiveCuSec = sumif(CUPerWindow, utilizationType == "Interactive" and releaseType == "Public") / 1000,
            totalBackgroundPreviewCuSec = sumif(CUPerWindow, utilizationType == "Background" and releaseType == "Preview") / 1000,
            totalInteractivePreviewCuSec = sumif(CUPerWindow, utilizationType == "Interactive" and releaseType == "Preview") / 1000
            by WindowStartTime, capacityId, capacityName
        | lookup (_summaryInfoOnSelectedTimeWindow
            | project capacityId, timepointCapacityUnits, overageTotalCuMs)
            on capacityId
        | project
            capacityId,
            windowTime=WindowStartTime,
            timepointCapacityUnits,
            overageTotalCuMs=iff(WindowStartTime == _selectedTimeWindow, overageTotalCuMs / 1000, 0.0),
            totalInteractiveCuSec,
            totalBackgroundCuSec,
            totalInteractivePreviewCuSec,
            totalBackgroundPreviewCuSec,
            capacityName,
            totalCuSec
        | extend
            overageAddCapacityUnitsMs = iff((totalCuSec - timepointCapacityUnits) > 0, (totalCuSec - timepointCapacityUnits), 0.0),
            overageBurndownCapacityUnitsMs = abs(iff((totalCuSec - timepointCapacityUnits) < 0, (totalCuSec - timepointCapacityUnits), 0.0))
        | extend overageTotalCapacityUnitsMs = iff(overageAddCapacityUnitsMs > 0, overageTotalCuMs + overageAddCapacityUnitsMs, overageTotalCuMs - overageBurndownCapacityUnitsMs)
        | serialize
        | extend overageTotalCapacityUnitsMs = iff(row_cumsum(overageTotalCapacityUnitsMs) > 0, row_cumsum(overageTotalCapacityUnitsMs), 0.0);
     _summarisedOperationsWithinWindow
    | project
        ["Window Time"]=windowTime,
        ["Capacity Id"] = capacityId,
        ["Capacity Name"] = capacityName,
        ["Timepoint Capacity Units"] = timepointCapacityUnits,
        ["Total Capacity CU´s"]=totalCuSec,
        ["Total Interactive Capacity CU´s"]=totalInteractiveCuSec,
        ["Total Background Capacity CU´s"]=totalBackgroundCuSec,
        ["Total Interactive Preview Capacity CU´s"]=totalInteractivePreviewCuSec,
        ["Total Background Preview Capacity CU´s"]=totalBackgroundPreviewCuSec,
        ["% of Capacity Units"] = 100 * totalCuSec / iff(isempty(timepointCapacityUnits),0, timepointCapacityUnits),
        ["% of Interactive Capacity Units"] = 100 * totalInteractiveCuSec / iff(isempty(timepointCapacityUnits),0, timepointCapacityUnits),
        ["% of Background Capacity Units"] = 100 * totalBackgroundCuSec / iff(isempty(timepointCapacityUnits),0, timepointCapacityUnits),
        ["% of Interactive Preview Capacity Units"] = 100 * totalInteractivePreviewCuSec / iff(isempty(timepointCapacityUnits),0, timepointCapacityUnits),
        ["% of Background Preview Capacity Units"] = 100 * totalBackgroundPreviewCuSec / iff(isempty(timepointCapacityUnits),0, timepointCapacityUnits),
        ["% of Overage Capacity Units"] = 100 * overageTotalCapacityUnitsMs / iff(isempty(timepointCapacityUnits),0, timepointCapacityUnits),
        ["Capacity Limit"] = 100
 }
.create-or-alter materialized-view  CapacityUtilizationDaily on table CapacityOperations { CapacityOperations
| project ['Capacity Id']=capacityId,
    ['Capacity Name'] = capacityName,
    ['Workspace Id'] = workspaceId,
    ['Workspace Name'] = workspaceName,
    ['Item Id'] = itemId,
    ['Item Name'] = itemName,
    ['Item Kind'] = itemKind,
    ['Operation Name'] = operationName,
    ['Utilization Type'] = utilizationType,
    ['Release Type'] = releaseType,
    ['CU´ms'] = capacityUnitMs,
    windowStartTime,
    windowEndTime,
    timepoints = (windowEndTime - windowStartTime) / 30s, 
    ['Date UTC'] = range(bin(windowStartTime, 1day), bin(windowEndTime,1day), 1day),
    workloadAutoscaleCapacityUnitsLimit
| where isempty( workloadAutoscaleCapacityUnitsLimit) or workloadAutoscaleCapacityUnitsLimit == 0
| mv-expand ['Date UTC'] to typeof(datetime)
| extend usedTimepoints =  (min_of(windowEndTime, (['Date UTC'] + 1days)) - max_of(windowStartTime, ['Date UTC'])) / 30s
| extend ['Timepoint CU (ms)'] = usedTimepoints*(['CU´ms']/timepoints/1000.0)
| summarize ['CU'] = sum(['Timepoint CU (ms)']) by 
    ['Capacity Id'],
    ['Capacity Name'],
    ['Workspace Id'],
    ['Workspace Name'],
    ['Item Id'],
    ['Item Name'],
    ['Item Kind'],
    ['Operation Name'],
    ['Utilization Type'],
    ['Release Type'],
    ['Date UTC'] }
